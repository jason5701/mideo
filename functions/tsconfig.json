    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",

    // ▼▼▼ 이 줄을 반드시 추가하시옵소서! (싸움 중재 명령) ▼▼▼
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
